<div data-test-deployment-log-details class="boxed-section">
  <div class="boxed-section-head">
    Details
  </div>
  <div class="boxed-section-body {{if @deployment-log.detailsAsArray.length "is-full-bleed"}}">
    {{#if @deployment-log.detailsAsArray.length}}
      <ListTable @source={{@deployment-log.detailsAsArray}} @class="details" as |t|>
        <t.head>
          <th>Name</th>
          <th>Detail</th>
        </t.head>
        <t.body as |row|>
          <tr data-test-deployment-log-detail-row>
            <td data-test-deployment-log-detail-row-name>
              {{ row.model.[0] }}
            </td>
            <td data-test-deployment-log-detail-row-detail>
              {{ row.model.[1] }}
            </td>
          </tr>
        </t.body>
      </ListTable>
      {{else}}
        <div class="empty-message" data-test-empty-job-deployment-log-details>
          <h3
            class="empty-message-headline"
            data-test-empty-job-deployment-log-details-headline
          >
            No details
          </h3>
          <p
            class="empty-message-body"
            data-test-empty-job-deployment-log-details-message
          >
            No details are provided
          </p>
        </div>
    {{/if}}
  </div>
</div>
